{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-native",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "node", "expo"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "**/*.spec.ts"
  ]
}
